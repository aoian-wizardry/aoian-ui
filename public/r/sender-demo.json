{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "sender-demo",
  "type": "registry:example",
  "registryDependencies": [
    "https://ui.aoian.chat/r/sender"
  ],
  "files": [
    {
      "path": "registry/examples/sender-demo.tsx",
      "content": "import * as React from \"react\"\nimport { toast } from \"sonner\"\n\nimport {\n  Sender,\n  SenderButton,\n  SenderContent,\n  SenderOperation,\n  SenderOperationBar,\n  SenderOperationBarExtra,\n  SenderSearchToggle,\n  SenderTextArea,\n} from \"@/components/aoian-ui/sender/sender\"\n\nexport default function SenderDemo() {\n  const [value, setValue] = React.useState(\"\")\n  const [isSearchMode, setIsSearchMode] = React.useState(true)\n  const [isLoading, setIsLoading] = React.useState(false)\n  return (\n    <div className=\"grow space-y-4 self-start\">\n      <Sender\n        placeholder=\"Hello? this is Aoian UI Sender\"\n        loading={isLoading}\n        value={value}\n        onChange={(e) => {\n          setValue(e?.target?.value)\n        }}\n        onSubmit={() => {\n          setIsLoading(true)\n          setTimeout(() => {\n            toast.success(value)\n            setValue(\"\")\n            setIsLoading(false)\n          }, 3000)\n        }}\n      >\n        <SenderContent>\n          <SenderTextArea />\n          <SenderOperation>\n            <SenderOperationBarExtra>\n              <SenderSearchToggle\n                pressed={isSearchMode}\n                onPressedChange={setIsSearchMode}\n              >\n                Search\n              </SenderSearchToggle>\n            </SenderOperationBarExtra>\n            <SenderOperationBar>\n              <SenderButton />\n            </SenderOperationBar>\n          </SenderOperation>\n        </SenderContent>\n      </Sender>\n      <p className=\"pl-4\">Force as loading</p>\n      <Sender onSubmit={() => null} loading={true} value={value}>\n        <SenderContent>\n          <SenderTextArea />\n          <SenderOperation>\n            <SenderOperationBarExtra>\n              <SenderSearchToggle\n                pressed={isSearchMode}\n                onPressedChange={setIsSearchMode}\n              >\n                Search\n              </SenderSearchToggle>\n            </SenderOperationBarExtra>\n            <SenderOperationBar>\n              <SenderButton />\n            </SenderOperationBar>\n          </SenderOperation>\n        </SenderContent>\n      </Sender>\n      <p className=\"pl-4\">Set to disabled</p>\n      <Sender\n        onSubmit={() => null}\n        value={value}\n        disabled\n        placeholder=\"Set to disabled\"\n      >\n        <SenderContent>\n          <SenderTextArea />\n          <SenderOperation>\n            <SenderOperationBarExtra>\n              <SenderSearchToggle\n                pressed={isSearchMode}\n                onPressedChange={setIsSearchMode}\n              >\n                Search\n              </SenderSearchToggle>\n            </SenderOperationBarExtra>\n            <SenderOperationBar>\n              <SenderButton />\n            </SenderOperationBar>\n          </SenderOperation>\n        </SenderContent>\n      </Sender>\n    </div>\n  )\n}\n",
      "type": "registry:example"
    }
  ]
}